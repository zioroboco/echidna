{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "yarn workspace @echidna/speak start",
    "docker-compose": "docker-compose -f .docker/docker-compose.yml",
    "docker-compose:run": "yarn docker-compose run --rm",
    "echidna": "yarn -s docker-compose:run echidna",
    "echidna:bash": "yarn -s echidna /bin/bash || :",
    "bash": "yarn -s echidna:bash"
  },
  "devDependencies": {
    "@types/node": "^12.0.2",
    "lerna": "^3.14.1",
    "prettier": "^1.17.1",
    "ts-node": "^8.1.1",
    "typescript": "^3.4.5"
  }
}
